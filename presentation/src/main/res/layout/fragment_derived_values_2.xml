<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragmentBasicInfo_textView_title"
        style="@style/activityEditBreed_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/derived_values_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_derivedValues2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentBasicInfo_textView_title">


        <TableLayout
            android:id="@+id/derivedValues_mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp">

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="@string/energy_po" />

                <EditText
                    android:id="@+id/et_energyPoints"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:textSize="18sp" />
            </TableRow>

            <View
                style="@style/Divider.Horizontal"
                android:layout_marginVertical="8dp" />

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="@string/siz_str" />

                <EditText
                    android:id="@+id/et_sizePlusStrength"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:textSize="18sp" />
            </TableRow>



            <TableRow>
                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="@string/damage_bonus" />

                <Spinner
                    android:id="@+id/spinner_damageBonus"
                    android:layout_width="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:textSize="18sp" />

            </TableRow>

            <View
                style="@style/Divider.Horizontal"
                android:layout_marginVertical="8dp" />


            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="@string/alignment" />

                <EditText
                    android:id="@+id/et_alignmentPoints"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:hint="@string/zero"
                    android:inputType="number|numberSigned"
                    android:textSize="18sp" />
            </TableRow>


            <ImageView
                android:id="@+id/derivedValues_img_alignment"
                android:layout_width="wrap_content"
                android:contentDescription="@string/alignment_picture"
                 />

            <View
                style="@style/Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/derivedValues_img_alignment" />
            <TableRow>
                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="@string/cthulhu_myth" />

                <EditText
                    android:id="@+id/et_cthulhuMyth"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:hint="@string/zero"
                    android:inputType="number|numberSigned"
                    android:textSize="18sp" />
            </TableRow>

            <View
                android:id="@+id/divider_bottom"
                style="@style/Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/derivedValues_mainLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent">

                <ImageButton
                    android:id="@+id/btn_edit"
                    style="@style/myCornerRadiusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/my_button"
                    android:contentDescription="@string/edit_derived_values_manually"
                    android:padding="4dp"
                    android:src="@drawable/ic_pencil_48dp"
                    android:text="@string/use_points"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
