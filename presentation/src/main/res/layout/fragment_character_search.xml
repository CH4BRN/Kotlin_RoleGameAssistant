<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_green_dark"
    tools:context=".fragments.fragment.CharacterSearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Character search" />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search ..."
        android:id="@+id/et_characterSearch"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_characterSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recycler_view_characters"/>


</androidx.constraintlayout.widget.ConstraintLayout>