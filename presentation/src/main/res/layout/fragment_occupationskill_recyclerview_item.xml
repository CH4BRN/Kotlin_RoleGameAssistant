<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/occupationSkill_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/tv_occupationSkillName"
        style="@style/TextViewSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:maxWidth="45dp"
        android:maxLength="16"
        android:text="Skill 1" />

    <TextView
        android:id="@+id/tv_occupationSkillBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="15" />

    <TextView
        android:id="@+id/tv_occupationSkillPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text=" + " />

    <TextView
        android:id="@+id/tv_occupationSkillAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1" />


    <TextView
        android:id="@+id/tv_occupationSkillSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" / " />

    <TextView
        android:id="@+id/tv_occupationSkillTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0" />

</LinearLayout>
