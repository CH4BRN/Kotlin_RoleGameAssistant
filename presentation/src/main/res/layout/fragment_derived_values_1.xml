<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    >

    <TextView
        android:id="@+id/fragmentBasicInfo_textView_title"
        style="@style/activityEditBreed_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/derived_values_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:scrollbars="vertical"
        android:id="@+id/scrollView_derivedValues1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        app:layout_constraintTop_toBottomOf="@id/fragmentBasicInfo_textView_title">
        <LinearLayout
            android:paddingBottom="64dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/base_hp_siz_con_2" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_baseHealthPoints"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/breed_bonus" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_breedHealthBonus"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/equal" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/total_hp" />

                    <TextView
                        style="@style/TextViewSubTitle"
                        android:layout_width="0dp"
                        android:id="@+id/et_totalHealthPoints"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:textSize="24sp" />
                </TableRow>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_marginVertical="8dp" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/idea_int_5" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_ideaPoints"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:textSize="24sp" />
                </TableRow>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_marginVertical="8dp" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/sanity_pow_5" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_sanityPoints"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:textSize="24sp" />
                </TableRow>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_marginVertical="8dp" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="@string/luck_pow_5" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_luckPoints"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:textSize="24sp" />
                </TableRow>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_marginVertical="8dp" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        style="@style/TextViewSubTitle"
                        android:layout_column="1"
                        android:layout_weight="1"

                        android:text="@string/know_edu_5" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_knowPoints"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:textSize="24sp" />
                </TableRow>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_marginVertical="8dp" />

            </TableLayout>
            <ImageButton
                android:layout_gravity="end"
                android:id="@+id/btn_edit"
                style="@style/myCornerRadiusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/mybutton"
                android:contentDescription="@string/edit_derived_values_manually"
                android:padding="4dp"
                android:src="@drawable/ic_pencil"
                android:text="@string/use_points"
                app:layout_constraintEnd_toEndOf="@id/scrollView_derivedValues1"
                app:layout_constraintTop_toBottomOf="@id/scrollView_derivedValues1" />
        </LinearLayout>



    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
