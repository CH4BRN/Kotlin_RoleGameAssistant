<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextViewFragmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Derived values 1"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_derivedValues1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_column="1"
                    android:text="HP : (SIZ + CON) /2 ="
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et_healthPoints"
                    android:layout_column="2"
                    android:layout_weight="4"
                    android:hint="0"
                    android:inputType="number" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_column="1"
                    android:text=" + BREED BONUS ="
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et_breedHealthBonus"
                    android:layout_column="2"
                    android:layout_weight="4"
                    android:hint="0"
                    android:inputType="number" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_column="1"
                    android:text="TOTAL ="
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et_totalHealth"
                    android:layout_column="2"
                    android:layout_weight="4"
                    android:hint="0"
                    android:inputType="number" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_column="1"
                    android:text="IDEA : (INT * 5) ="
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et_ideaPoints"
                    android:layout_column="2"
                    android:layout_weight="4"
                    android:hint="0"
                    android:inputType="number" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_column="1"
                    android:text="CHANCE : (POU * 5) ="
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et_chancePoints"
                    android:layout_column="2"
                    android:layout_weight="4"
                    android:hint="0"
                    android:inputType="number" />
            </TableRow>



        </TableLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/btn_edit"
        style="@style/myCornerRadiusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/mybutton"
        android:contentDescription="Edit derived values manually."
        android:padding="4dp"
        android:src="@drawable/ic_pencil"
        android:text="Use points"
        app:layout_constraintEnd_toEndOf="@id/scrollView_derivedValues1"
        app:layout_constraintTop_toBottomOf="@id/scrollView_derivedValues1" />


</androidx.constraintlayout.widget.ConstraintLayout>
