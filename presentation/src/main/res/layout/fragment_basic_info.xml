<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ParentLinearLayout"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/fragmentBasicInfo_textView_title"
        style="@style/activityEditBreed_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/character" />

    <ScrollView
        android:id="@+id/fragmentBasicInfo_scrollview_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="4dp"
            android:id="@+id/container_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    style="@style/Row"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/tv_subtitle_name"
                        style="@style/TextViewSubTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/et_characterName"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:hint="@string/name_hint"
                        android:inputType="text" />
                </TableRow>

                <TableRow style="@style/Row">

                    <TextView
                        android:id="@+id/tv_subtitle_age"
                        style="@style/TextViewSubTitle"
                        android:text="@string/age"
                        android:layout_weight="1"
                        android:layout_width="0dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_characterAge"
                        android:layout_weight="1"
                        android:hint="@string/age_hint"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tv_subtitle_gender"
                        style="@style/TextViewSubTitle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/gender" />

                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/et_CharacterGender"
                        android:layout_weight="1"
                        android:hint="@string/gender_hint"
                        android:inputType="text" />


                </TableRow>

                <TableRow style="@style/Row">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:id="@+id/tv_subtitle_biography"
                        style="@style/TextViewSubTitle"
                        android:text="@string/biography" />

                    <EditText
                        android:id="@+id/et_CharacterBiography"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:hint="@string/biography_hint"
                        android:inputType="textMultiLine" />
                </TableRow>
                <TableRow style="@style/Row">

                    <TextView

                        android:id="@+id/tv_subtitle_height"
                        style="@style/TextViewSubTitle"
                        android:text="@string/height"
                        android:layout_weight="1"
                        android:layout_width="0dp"/>

                    <EditText
                        android:id="@+id/et_CharacterHeight"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="@string/height_hint"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tv_subtitle_weight"
                        style="@style/TextViewSubTitle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/weight" />

                    <EditText
                        android:id="@+id/et_CharacterWeight"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="@string/weight_hint"
                        android:inputType="number" />

                </TableRow>


                <TableRow>

                    <TextView
                        android:id="@+id/tv_subtitle_breed"
                        style="@style/TextViewSubTitle"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/breed" />

                    <FrameLayout
                        android:id="@+id/basicInfo_container_breed"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_width="0dp" />
                </TableRow>

                <TableRow style="@style/Row">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_column="2"
                        android:layout_span="3">

                        <ImageButton
                            android:id="@+id/btn_addBreed"
                            style="@style/myCornerRadiusButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mybutton"
                            android:contentDescription="@string/add_breed_description"
                            android:padding="8dp"
                            android:src="@drawable/ic_add_black_24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </TableRow>


            </TableLayout>

            <FrameLayout
                android:id="@+id/basicInfo_container_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_info" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
