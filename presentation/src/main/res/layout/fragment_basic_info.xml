<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ParentLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnback_basicinfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnback_basicinfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Basic Info : " />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableLayout
                android:id="@+id/layout_basicInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/tv_subtitle_name"
                        android:layout_column="1"
                        android:text="Name : " />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Name ... "
                        android:inputType="text" />
                </TableRow>

                <TableRow android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv_subtitle_age"
                        android:layout_column="1"
                        android:text="Age : " />

                    <EditText
                        android:id="@+id/et_age"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Age ... "
                        android:inputType="text" />
                </TableRow>
                <TableRow android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv_subtitle_biography"
                        android:layout_column="1"
                        android:text="Biography : " />

                    <EditText
                        android:id="@+id/et_biography"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Biography ... "
                        android:inputType="text"
                        android:minLines="5"/>
                </TableRow>

                <TableRow android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv_subtitle_race"
                        android:layout_column="1"
                        android:text="Race : " />

                    <Spinner
                        android:id="@+id/spinner_race"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Race ... "
                        android:inputType="text" />
                    <Button
                        android:id="@+id/btn_add_race"
                        android:layout_weight="1"
                        android:text="+"/>
                </TableRow>




            </TableLayout>
            <FrameLayout
                android:id="@+id/container_picture"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/layout_basicInfo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:minHeight="50dp"
                android:layout_column="2"
                android:layout_span="2"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"></FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>

