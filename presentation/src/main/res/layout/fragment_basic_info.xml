<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ParentLinearLayout">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Character : " />

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <TableLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/tv_subtitle_name"
                        android:layout_column="1"
                        android:text="Name : " />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Name ... "
                        android:inputType="text" />
                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/tv_subtitle_age"
                        android:layout_column="1"
                        android:text="Age : " />

                    <EditText
                        android:id="@+id/et_age"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Age ... "
                        android:inputType="number" />
                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/tv_subtitle_biography"
                        android:layout_column="1"
                        android:text="Biography : " />

                    <EditText
                        android:id="@+id/et_biography"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints="@string/lorem_ipsum_short"
                        android:hint="@string/lorem_ipsum_short"
                        android:inputType="textMultiLine" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tv_subtitle_race"
                        android:layout_column="1"
                        android:text="Race : " />

                    <Spinner
                        android:id="@+id/spinner_race"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Race ... "
                        android:inputType="text" />

                    <Button
                        android:id="@+id/btn_addRace"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:text="Add Race" />
                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/tv_subtitle_gender"
                        android:layout_column="1"
                        android:text="Gender : " />

                    <EditText
                        android:id="@+id/et_gender"
                        android:layout_column="2"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:autofillHints="gender"
                        android:hint="Gender ... "
                        android:inputType="text" />
                </TableRow>

                <TableRow android:layout_width="match_parent"

                    >

                    <TextView
                        android:id="@+id/tv_subtitle_height"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="Height :" />

                    <EditText
                        android:id="@+id/et_height"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="1"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tv_subtitle_weight"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:text="Weight : " />

                    <EditText
                        android:id="@+id/et_weight"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="50"
                        android:inputType="number" />


                </TableRow>
            </TableLayout>

            <FrameLayout
                android:id="@+id/container_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_info" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>
