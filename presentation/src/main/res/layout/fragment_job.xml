<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/container_jobPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <TextView
            android:id="@+id/tv_jobPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <TextView
            android:id="@+id/tv_totalJobPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/container_jobPoints" />

    <Button
        android:id="@+id/btn_job_add_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add skill"
        app:layout_constraintEnd_toEndOf="@id/spinner_skills"
        app:layout_constraintTop_toBottomOf="@id/spinner_skills" />

    <LinearLayout
        android:id="@+id/container_skillPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_job_add_skill">

        <Spinner
            android:id="@+id/spinner_skill_tens"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/spinner_skill_units"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/ 99" />

        <Button
            android:id="@+id/btn_validateSkillPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validate" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_jobSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_skillPoints" />

</androidx.constraintlayout.widget.ConstraintLayout>