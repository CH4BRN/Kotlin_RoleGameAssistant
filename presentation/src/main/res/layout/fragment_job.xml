<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextViewFragmentTitle"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/container_jobSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/container_jobPoints"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <LinearLayout
        android:id="@+id/container_jobPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_jobSkills">

        <TextView
            android:id="@+id/tv_jobPoints_hundreds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/tv_jobPoints_tens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/tv_jobPoints_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <TextView
            android:id="@+id/tv_totalJobPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300" />

    </LinearLayout>
    <Button
        app:layout_constraintBottom_toTopOf="@id/tv_selectedSkill"
        android:id="@+id/btn_job_add_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/tv_selectedSkill"
        android:text="Add skill"
        app:layout_constraintTop_toBottomOf="@id/container_jobPoints" />

    <TextView
        android:id="@+id/tv_selectedSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Skill : SampleSkill"
        app:layout_constraintTop_toBottomOf="@id/btn_job_add_skill" />


    <LinearLayout
        android:id="@+id/container_skillPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selectedSkill">

        <Spinner
            android:id="@+id/spinner_skill_tens"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/spinner_skill_units"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/ 99" />

        <Button
            android:id="@+id/btn_validateSkillPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validate" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
