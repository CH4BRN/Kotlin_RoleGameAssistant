<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uldskull.rolegameassistant">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.uldskull.rolegameassistant.application.MainApplication"
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.uldskull.rolegameassistant.activities.newCharacter.CharacterActivity"
            android:configChanges="orientation|screenSize">


        </activity>

        <activity

            android:name="com.uldskull.rolegameassistant.activities.CharacterSearchActivity"
            android:configChanges="orientation|screenSize">

        </activity>

        <activity
            android:name=".activities.NewIdealActivity"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".activities.NewBreedActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".activities.NewSkillActivity"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".activities.NewOccupationActivity"
            android:configChanges="orientation|screenSize"/>


    </application>


</manifest>